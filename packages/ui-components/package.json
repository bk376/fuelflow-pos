{
  "name": "@gas-station/ui-components",
  "version": "1.0.0",
  "description": "Shared UI components for Gas Station POS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "dev": "npm-run-all --parallel dev:*",
    "dev:ts": "tsc --watch",
    "dev:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.4",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "@gas-station/types": "*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}